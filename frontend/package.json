{
  "name": "imposter-game",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite --host --port 5173",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "preview:prod": "vite preview --mode production",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:integration": "vitest --run --config vitest.integration.config.js",
    "test:integration:watch": "vitest --config vitest.integration.config.js",
    "test:e2e": "vitest --run src/__tests__/e2e",
    "test:all": "npm run test && npm run test:integration",
    "test:cross-browser": "vitest --run src/__tests__/integration/crossBrowserCompatibility.test.js",
    "test:network-resilience": "vitest --run src/__tests__/integration/networkResilience.test.js",
    "test:performance": "echo 'server performance tests removed' && exit 0",
    "test:comprehensive": "node src/__tests__/integration/testRunner.js --comprehensive",
    "test:browser-only": "node src/__tests__/integration/testRunner.js --browser-only",
    "test:network-only": "node src/__tests__/integration/testRunner.js --network-only"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.0.0",
    "copilot": "^0.0.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^3.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "vitest": "^0.34.0",
    "jsdom": "^22.1.0",
    "autoprefixer": "^10.0.0",
    "postcss": "^8.0.0",
    "tailwindcss": "^3.0.0",
    "vite": "^4.0.0",
    "playwright": "^1.40.0"
  }
}
